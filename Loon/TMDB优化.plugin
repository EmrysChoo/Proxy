[General]
name = TMDB Test
author = Test

[Script]
http-request ^https?:\/\/api\.themoviedb\.org\/3\/search\/movie script-path=script-text, requires-body=true, script-text=
const url = $request.url;
if (!url.includes('language=')) {
    $done({url: url + (url.includes('?') ? '&' : '?') + 'language=zh-CN'});
} else {
    $done({url: url});
}

[Mitm]
hostname = api.themoviedb.org
