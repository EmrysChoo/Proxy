[MITM]
hostname = ai.puter.com, api.puter.com

[Rewrite]
^https:\/\/ai\.puter\.com\/v1\/chat\/completions script-request-body puter_grok

[Script]
puter_grok = type=http-request,pattern=^https:\/\/ai\.puter\.com\/v1\/chat\/completions,requires-body=1,max-size=0,timeout=60,script-path=https://raw.githubusercontent.com/EmrysChoo/Proxy/refs/heads/main/Loon/puter_grok.js
